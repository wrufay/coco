{
  "manifest_version": 3,
  "name": "coco ೀ⋆｡˚",
  "version": "0.6.7",
  "description": "never stress over job applications again.",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs"
  ],
  "side_panel": {
    "default_path": "panel.html"
  },
  "icons": {
    "16": "media/cocologo.png",
    "32": "media/cocologo.png",
    "48": "media/cocologo.png",
    "128": "media/cocologo.png"
  },
  "action": {
    "default_title": "Open Coco",
    "default_icon": {
      "16": "media/cocologo.png",
      "32": "media/cocologo.png",
      "48": "media/cocologo.png",
      "128": "media/cocologo.png"
    }
  },
  "host_permissions": [
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "bg.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}